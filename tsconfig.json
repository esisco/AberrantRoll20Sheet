{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "src/scripts/",
    "target": "esnext"
  },
  "include": [
    "src/ts/*.ts",
    "src/ts/common/*.ts",
    "src/ts/types/*"
  ],
  "exclude": [
    "node_modules",
    "src/ts/utils/*"
  ]
}